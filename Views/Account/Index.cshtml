@model muhammedkayraozkaya_241103046.Models.UserModel;
@{
	var user = Model ?? throw new ArgumentNullException();
}

<div class="account-details">
	<div class="books">
		@if (user.Books.Length == 0)
		{
			<div>No books added yet</div>
		}
		else
		{
			@foreach (var book in user.Books)
			{
				<partial name="Book/details" model=@book />
			}
		}
	</div>
	<div class="infos">
		<div>
			<img src="~/img/user.jpg" />
		</div>
		<div class="username">
			<label>Username</label>
			<div class="value">@user.Username</div>
		</div>
		<div class="role">
			<label>Role</label>
			<div class="value">@user.Role</div>
		</div>
		<div class="password">
			<label>Password</label>
			<div class="value">@user.Password</div>
		</div>
	</div>
</div>