<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Close Library</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/book-card.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/book-card_details.css" asp-append-version="true" />
</head>
<body> 
    <div id="cl-banner">
        <div>Muhammed Kayra Özkaya - 241103046</div>
    </div>
    <header id="cl-header">
        <a class="logo" href="/">
            <div class="label-close">CLOSE</div>
            <div class="label-library">Library</div>
        </a>
    </header>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
