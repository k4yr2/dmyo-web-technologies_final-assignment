@model muhammedkayraozkaya_241103046.Models.BookCard
@{

    var book = Model?.Book ?? new BookModel(-1, -1, -1);
}
<div class="book-card">
    <div class="book-cover">
        <a asp-controller="books" asp-action="details" asp-route-id="@book.Id">
            <img src="~/img/covers/@book.ImgStr()" alt="@book.Title" /> 
        </a>
        <div class="book-details">
            <p class="stocks">
                @book.Stocks left
            </p>
            <p class="rating">
                ⭐@book.Rating points
            </p>
            <p class="discount">
                Save %@(book.Discount)           
            </p>
            <p class="price">
                @(book.Price()) TL             
            </p>
        </div>
    </div>
    <div class="book-details">
        @if (Model?.Details.Stocks != null)
        {
            <div class="stocks">
                @book.Stocks left
            </div>
        }
        @if (Model?.Details.Rating != null)
        {
            <div class="rating">
                ⭐@book.Rating Points
            </div>
        }
        @if (Model?.Details.Price != null)
        {
            <div class="price">
                <div class="discount">
                    <div class="label">Save</div>
                    <div class="value">@(book.Discount)%</div>
                </div>
                <div class="amount">
                    <div class="cost">@(book.Cost)</div>
                    <div class="net">@(book.Price()) TL</div>
                </div>
            </div>
        }
    </div>

</div>