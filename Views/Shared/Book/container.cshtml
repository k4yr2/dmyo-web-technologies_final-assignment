@model muhammedkayraozkaya_241103046.Models.BookContainer
@{
    var className = "book-container";
    if (Model.Count != 0)
        className += " line";
}

<div class="@className">
    @if(Model != null)
    {
        @foreach (var book in Model.Display)
        {
            <partial name="Book/card" model=@book/>
        }
    }
</div>